{
  "name": "bilibili-vod-downloader",
  "version": "1.0.0",
  "description": "B站直播回放下载器 - Windows客户端",
  "main": "main/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "dev": "chcp 65001 && cross-env NODE_ENV=development electron .",
    "build": "electron-builder --win"
  },
  "keywords": [
    "bilibili",
    "live",
    "vod",
    "downloader"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "jquery": "^3.7.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^26.3.0",
    "electron-builder": "^24.6.4",
    "glob": "^13.0.0"
  },
  "build": {
    "appId": "com.bilibili.voddownloader",
    "productName": "B站直播回放下载器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "package.json",
      "node_modules",
      "!ffmpeg/**/*",
      "!dist/**/*",
      "!*.md",
      "!*.py",
      "!*.txt",
      "!test-encoding.js",
      "!cookie.txt"
    ],
    "extraResources": [
      {
        "from": "ffmpeg/ffmpeg.exe",
        "to": "ffmpeg/ffmpeg.exe"
      },
      {
        "from": "ffmpeg/ffprobe.exe",
        "to": "ffmpeg/ffprobe.exe"
      }
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        "nsis",
        "dir"
      ],
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "installerHeaderIcon": "assets/icons/icon.ico"
    },
    "electronVersion": "26.3.0"
  }
}
